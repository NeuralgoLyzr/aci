# Copy this file to .env.local and fill in your Azure OpenAI credentials
# DO NOT COMMIT THIS FILE TO GIT - add .env.local to .gitignore

########################################################
# REQUIRED: Azure OpenAI Configuration
########################################################

# Get these values from Azure Portal → Azure OpenAI resource → Keys and Endpoint
SERVER_AZURE_OPENAI_API_KEY=<YOUR_AZURE_OPENAI_API_KEY>
SERVER_AZURE_OPENAI_ENDPOINT=<YOUR_AZURE_OPENAI_ENDPOINT>
SERVER_AZURE_OPENAI_API_VERSION=2024-10-21
SERVER_AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002
SERVER_AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4o

# CLI can use same credentials as server
CLI_AZURE_OPENAI_API_KEY=<YOUR_AZURE_OPENAI_API_KEY>
CLI_AZURE_OPENAI_ENDPOINT=<YOUR_AZURE_OPENAI_ENDPOINT>
CLI_AZURE_OPENAI_API_VERSION=2024-10-21
CLI_AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002
CLI_AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4o

